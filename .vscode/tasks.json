{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Research Engine",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"uvicorn",
				"main:app",
				"--host",
				"0.0.0.0",
				"--port",
				"8000",
				"--reload"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}